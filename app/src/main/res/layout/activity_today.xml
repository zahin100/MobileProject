<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityToday"
    tools:ignore="HardcodedText">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityToday">

    <TextView
        android:id="@+id/lblTodayActivity"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingLeft="45pt"
        android:paddingTop="10pt"
        android:text="What will your activity be today?" />

    <Button
        android:id="@+id/btnGetWordDefinition"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="@string/btnGetTodayActivity"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/txtActivity"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:paddingTop="10pt" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:paddingTop="10pt" />

    <TextView
        android:id="@+id/txtParticipants"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="10pt" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="10pt" />

</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>